<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.depositobebidassys.controller.ProdutoController">
    <children>
        <VBox alignment="CENTER" spacing="30.0" maxWidth="800">
            <padding><Insets bottom="40.0" left="40.0" right="40.0" top="40.0" /></padding>

            <Label styleClass="label-titulo" text="CADASTRAR NOVO PRODUTO" />

            <VBox spacing="25.0" styleClass="card-form" VBox.vgrow="ALWAYS">
                <padding><Insets bottom="40.0" left="40.0" right="40.0" top="40.0" /></padding>

                <GridPane hgap="40" vgap="30">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>

                    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Nome da Bebida" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtNome" promptText="Ex: Skol, Coca-Cola, Red Label" />
                    </VBox>

                    <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Volume / Embalagem" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="cbVolume" maxWidth="Infinity" promptText="Selecione..." />
                    </VBox>

                    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Categoria" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="cbCategoria" maxWidth="Infinity" promptText="Selecione..." />
                    </VBox>

                    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="Código de Barras" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtCodigoBarras" promptText="Bipe o produto aqui" />
                    </VBox>

                    <HBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <Label text="Preço Custo (R$)" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="txtPrecoCusto" promptText="0.00" />
                        </VBox>
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <Label text="Preço Venda (R$)" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="txtPrecoVenda" promptText="0.00" />
                        </VBox>
                    </HBox>

                    <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Label text="Estoque Inicial" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtEstoque" promptText="Qtd em estoque" />
                    </VBox>
                </GridPane>

                <Region VBox.vgrow="ALWAYS" />
                <HBox alignment="CENTER">
                    <Button onAction="#onSalvar" styleClass="button-salvar" text="FINALIZAR CADASTRO" prefWidth="350" prefHeight="50" style="-fx-font-size: 16px;" />
                </HBox>
            </VBox>
        </VBox>
    </children>
</StackPane>